rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /teamFiles/{teamId}/{allPaths=**} {
      allow write: if request.auth != null &&
        get(/databases/$(default)/documents/users/$(request.auth.uid)).data.teamId == teamId;
      allow read: if request.auth != null &&
        get(/databases/$(default)/documents/users/$(request.auth.uid)).data.teamId == teamId;
    }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
